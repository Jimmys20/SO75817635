@model EmployeeInfo
@{
    ViewData["Title"] = "Home Page";
}

@Html.TextAreaFor(model => model.SignatureField, new { @class = "form-control editorHtml" })

@section Scripts {
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.0.20/tinymce.min.js"></script>
    <script type="text/javascript">
        tinyMCE.init({
            mode: "specific_textareas",
            selector: "#SignatureField",
        });
    </script>
}
